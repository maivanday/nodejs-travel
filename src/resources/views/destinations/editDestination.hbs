<div class="container">

    <h3>
        cập nhật bài viết về các điểm du lịch
    </h3>

</div>
<form method="POST" action="/destinations/{{destination._id}}?_method=PUT" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">tên bài viết</label>
        <input type="name" class="form-control" value="{{destination.name}}" id="name" placeholder="nhap ten bai viet"
            name="name">

    </div>
    <div class="form-group">
        <label for="description">nội dung bài viết</label>
        <textarea class="form-control" id="description" placeholder="nội dung"
            name="description">{{destination.description}}</textarea>
    </div>


    <div class="form-group">
        <div class="col-md-4 ">
            <label for="img">thay đổi hình ảnh</label>
            <input type="file" name="img[]" multiple="multiple">
            <div class="row">

                {{#with destination.img}}

                {{#each this}}
                <td><img src="../../uploads/imgDestinations/{{this}}" alt="" width="200px"></td>
                {{/each}}

                {{/with}}
            </div>
        </div>

    </div>
    <div class="form-group">
        <label for="area">chon khu vuc</label>
        <select id="area" name="area">
            <option value="can-tho">cantho</option>
            <option value="hau-giang">hau giang</option>
            <option value="kieng giang">kien giang</option>
            <option value="ca mau">ca mau</option>
        </select>
    </div>


    <button type="submit" class="btn btn-primary">cap nhat</button>
</form>