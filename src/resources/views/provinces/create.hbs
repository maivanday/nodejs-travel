<div class="container margin-top text-center">

    <h3>
        Thêm các tỉnh Đồng bằng sông Cửu Long
    </h3>

</div>
<div class="container">
    <form method="POST" action="/provinces/store" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Tên tỉnh</label>
            <input type="name" class="form-control" id="name" placeholder="Nhập tên tỉnh" name="name">
        </div>
        <div class="form-group">
            <label for="description">Giới thiệu đôi nét về tỉnh</label>
            <textarea id="description" name="description" rows="10" cols="100" class="form-control">
                          </textarea>
        </div>
        <div class="form-group">
            <label for="imgProvince">Ảnh đại diện</label>
            <input type="file" id="imgProvince" name="imgProvince">
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>