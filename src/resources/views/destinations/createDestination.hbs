<div class="container">

    <h3>
        them cac diem du lich
    </h3>

</div>
<form method="POST" action="/destinations/store" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">ten dia diem</label>
        <input type="name" class="form-control" id="name" placeholder="nhap ten dia diem" name="name">

    </div>
    <div class="form-group">
        <label for="description">noi dung bai viet</label>
        <input type="text-area" class="form-control" id="description" placeholder="mo ta" name="description">
    </div>
    <div class="form-group">
        <label for="img">them hinh anh</label>
        <input type="file" name="img[]" multiple="multiple">
    </div>
    <div class="form-group">
        <label for="area">chon khu vuc</label>
        <select id="area" name="area">
            <option value="can-tho">cantho</option>
            <option value="hau-giang">hau giang</option>
            <option value="kieng giang">kien giang</option>
            <option value="ca mau">ca mau</option>
        </select>
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>