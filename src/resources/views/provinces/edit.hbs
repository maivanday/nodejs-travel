<div class="container">

    <h3>
        cap nhat thong tin khu vuc du lich
    </h3>

</div>
<form method="POST" action="/provinces/{{province._id}}?_method=PUT" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">ten tinh</label>
        <input type="name" class="form-control" value="{{province.name}}" id="name" placeholder="nhap ten tinh"
            name="name">

    </div>
    <div class="form-group">
        <label for="description">mo ta</label>
        <textarea class="form-control" id="description" placeholder="mo ta"
            name="description">{{province.description}}</textarea>
    </div>

    <div class="form-group">

        <label for="">hinh anh</label>
        <input type="file" class="form-control-file" name="imgProvince">
        <div class="col-md-4 ">
            <div class="row">
                <img src="../../uploads/imgProvinces/{{province.img}}" width="100" height="100" alt="">
            </div>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">cap nhat</button>
</form>