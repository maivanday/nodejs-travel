<div class="container margin-top">
    <div class="destination-list">
        <div class="row">
            <div class=" col-12">
                <a href="/destinations/{{destination.slug}}">

                    {{#with destination.img}}
                    <img src="../../uploads/imgDestinations/{{this.[1]}}" alt="" width="550px" class="card-img-top">

                    {{/with}}
                </a>
                <div class="card-body">

                    <p class="card-title">{{destination.name}}</p>

                    <p class="card-text">{{destination.area}}</p>

                </div>
            </div>
            <div class="col-12">
                {{#with destination.img}}
                <img src="../../uploads/imgDestinations/{{this.[0]}}" alt="" width="550px" class="card-img-top">

                {{/with}}
                <p class="card-text">{{destination.description}}</p>
            </div>

        </div>

    </div>
</div>