<div class="container margin-top">

    <h3 class="text-center">
        Cập nhật thông tin điểm du lịch
    </h3>

</div>
<div class="container">
    <form method="POST" action="/destinations/{{destination._id}}?_method=PUT" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Tên điểm du lịch</label>
            <input type="name" class="form-control" value="{{destination.name}}" id="name" name="name">

        </div>
        <div class="form-group">
            <label for="description">Nội dung giới thiệu</label>
            <textarea class="form-control" id="description" rows="20" cols="100"
                name="description">{{destination.description}}</textarea>
        </div>


        <div class="form-group">
            <div class="col-md-4 ">
                <label for="img">Thay đổi hình ảnh</label>
                <input type="file" name="img[]" multiple="multiple">
                <div class="row">

                    {{#with destination.img}}
                    {{#each this}}
                    <div class="col-md-4"><img src="../../uploads/imgDestinations/{{this}}" alt="" width="200px"></div>
                    {{/each}}
                    {{/with}}
                </div>
            </div>

        </div>
        <div class="form-group">
            <label for="area">chon khu vuc</label>
            <select id="area" name="area">
                <option value="can-tho">Cần Thơ</option>
                <option value="hau-giang">Hậu Giang</option>
                <option value="kien-giang">Kiên Giang</option>
                <option value="bac-lieu">Bạc Liêu</option>
                <option value="ca-mau">Cà Mau</option>
                <option value="soc-trang">Sóc Trăng</option>
                <option value="dong-thap">Đồng Tháp</option>
                <option value="an-giang">An Giang</option>
                <option value="tra-vinh">Trà Vinh</option>
                <option value="vinh-long">Vĩnh Long</option>
                <option value="ben-tre">Bến Tre</option>
                <option value="long-an">Long An</option>
                <option value="tien-giang">Tiền Giang</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>

</div>