<div class="container margin-top">
    <div class="row ">
        <div class="col-12">
            <div class="destination-body">

                <h3 class="text-center">Khám phá những nét đặc trưng của tỉnh {{province.name}}</h3>

                <p class="text">{{province.description}}</p>
            </div>
            <a href="/provinces/{{province.slug}}">
                <img src="../../uploads/imgProvinces/{{province.img}}" class="card-img-top" alt="...">
            </a>
        </div>
    </div>
</div>

<div class="container margin-top">
    <h3 class="text-center"> Những điểm du lịch nổi tiếng ở {{province.name}}</h3>
    <h5 class="text-center">Khám phá ngay</h5>
    <div class="row margin-top">
        {{#each destination}}
        <div class="col-md-4 destination-item  ">
            <div class="destination-img">
                <a href="/destinations/{{this.slug}}">
                    {{#with this.img}}
                    <img src="../../uploads/imgDestinations/{{this.[1]}}" alt="" width="100%" height="100%">
                    {{/with}}
                </a>
            </div>
            <div class="destination-body">
                <a href="/destinations/{{this.slug}}">
                    <h5>{{this.name}}</h5>
                </a>
                <p>Khu vực: {{this.area}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>